                                    <input class="form-control" id="exampleTextarea1" value="" name="description" />
                                </div>
                                <div class="form-group">
                                    <label for="amount">URL</label>
                                    <input class="form-control" type="text" id="amount" name="url">
                                </div>




                                <button type="submit" class="btn btn-primary me-2"> ADD </button>
                                <!-- <a href="/admin/banner"><button class="btn btn-light">Cancel</button></a> -->
