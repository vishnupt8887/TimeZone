<%- include('../admin/partials/adminheader') %> 
<div class="content">
<div class="container-fluid  pt-4 px-4" >
    <div class="row g-4">
        <!-- <div class="  col-xl-2 ">

        </div> -->
        <div class="col-sm-12 col-xs-12   col-xl-10">
          <div class="card">
            <div class="card-body">

          <a href="/admin/add-banner"><button type="submit" class="btn btn-primary">Add Banner</button></a>
          
<table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">URL</th>
        <th scope="col">Image</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% Allban.forEach((el,i)=>{%>

     
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= el.title %></td>
        <td><%= el.description %></td>
        <td><%= el.url %></td>
        <td><img src="<%= el.image %>" width="100px" height="auto" alt=""></td>
        <td><a href="/admin/delete-banner?id=<%= el._id %>" class="btn btn-danger" >Delete</button></a>
      </tr>
      <% }) %> 
    </tbody>
  </table>
  

  </div>
</div>
</div>
</div>
</div>
</div>