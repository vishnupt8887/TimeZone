
<%- include('../admin/partials/adminheader') %> 

<div class="content">
<div class="container-fluid  pt-4 px-4" >
    <div class="row g-4">
        <!-- <div class="  col-xl-2 ">

        </div> -->
        <div class="col-sm-12 col-xs-12   col-xl-10">
          <div class="card">
            <div class="card-body">

          <a href="/admin/addCoupons"><button type="submit" class="btn btn-primary">Add Coupons</button></a>
<table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Coupon Code</th>
        <th scope="col">Available</th>
        <th scope="col">Status</th>
        <th scope="col">Amount</th>
        <th scope="col">Expire Time</th>
        <th scope="col">Minimum Cart Amount</th>
        <th scope="col">Created At</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    

     <% c.coup.forEach((x,i)=>{ %>
      <tr id="<%= x._id %>">
        <th scope="row"><%= i+1 %></th>
        <td><%= x.code %></td>
        <td><%= x.Available %></td>
        <td><%= x.Status %></td>
        <td><%= x.amount %></td>
        <td><%= x.expireAfter.toLocaleString() %></td>
        <td><%= x.minCartAmount %></td>
        <td><%= x.createdAt.toLocaleString() %></td>
        <td><button onclick="deleted('<%= x._id %>')" class="btn btn-danger">Delete</button></td>
      </tr>
      <% }) %> 
    </tbody>
  </table>
  

  </div>
</div>
</div>
</div>

<script>
    function deleted(id){
        Swal.fire({
  title: 'Are you sure?',
  text: "You won't be able to revert this!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
 }).then((result) => {
  if (result.isConfirmed) {
    $.ajax({
            url:`/admin/couponDelete?id=${id}`,
            method:'get',
            success:((response)=>{
                if(response.status){
                  document.getElementById(id).remove()
                }
            })
        })
    Swal.fire(
      'Deleted!',
      'Your file has been deleted.',
      'success'
    )
  }
 })
       
       
}
</script>