            <script>

                function addWishList(proId) {

                    $.ajax({
                        url: `/addWishlist?pro=${proId}`,
                        method: 'post',
                        success: ((res) => {

                            if (res.remove) {

                                document.getElementById(proId).style.color = 'grey'
                            } else {
                                document.getElementById(proId).style.color = 'red'
                            }

                        })
                    })
                }
